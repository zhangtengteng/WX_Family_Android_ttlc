    /**
     * 字符串转换为软件包pagesize
     * 
     * @param tagText 带处理数据
     * @return pagesize
     */
    public static String formatSizeData(String tagText)
    {
        // 最后保存的值
        String appSize = "";
        // 单位MB
        int mByte = 1024 * 1024;
        // 浮点数规格
        NumberFormat numberFormat = NumberFormat.getNumberInstance();
        numberFormat.setMaximumFractionDigits(1);
        // 对服务器返回的值进行处理
        try
        {
            double size = Double.parseDouble(tagText);
            if (size < mByte)
            {
                appSize = numberFormat.format(size / 1024) + "K";
            }
            else
            {
                appSize = numberFormat.format(size / mByte) + "M";
            }
        }
        catch (NumberFormatException e)
        {
            appSize = tagText;
        }
        
        return appSize;
    }
    
    /**
     * 处理请求参数里的特殊符号
     * 
     * @param param url参数
     * @return 处理后的字符串
     */
    public static String parseUrlParam(String param)
    {
        return param.replaceAll("%", "%25")
                .replaceAll("\\+", "%2B")
                .replaceAll("\\?", "%3F")
                .replaceAll(" ", "%20")
                .replaceAll("#", "%23")
                .replaceAll("/", "%2F")
                .replaceAll("&", "%26")
                .replaceAll("=", "%3D");
    }
    
