     */
    public static String getMatcherStr(String str)
    {
        if (null == str)
        {
            return null;
        }
        String regex = "(?<=&hw_contentcode=).*?(?=&)";
        Matcher m = Pattern.compile(regex).matcher(str);
        if (m.find())
        {
            return m.group();
        }
        else
        {
            regex = "(?<=&hw_contentcode=).*";
            m = Pattern.compile(regex).matcher(str);
            if (m.find())
            {
                return m.group();
            }
        }
        return null;
    }
    
