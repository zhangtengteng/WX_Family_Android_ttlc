<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="65dip"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/notification_item_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notification_item_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="0.1dip"
                android:layout_height="match_parent"
                android:background="@drawable/wx_vertical_divider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/notification_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/wx_black_3c3c3c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/notification_item_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:textColor="@color/wx_black_858585"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/notification_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/wx_black_3c3c3c"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="查看全文"
                    android:textColor="@color/wx_green_35c384"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/notification_item_delete"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/wx_notification_item_delete" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_marginLeft="65dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/common_divider_line" />

</LinearLayout>