<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/grade_count_expand_group_item_time"
        android:layout_width="match_parent"
        android:layout_height="28dip"
        android:background="@drawable/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:text="2015年下学期"
        android:textColor="@color/green_08a801_color"
        android:textSize="16sp"
         android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray_D2D2D2_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
<!-- android:background="@drawable/qizhong"  -->
        <ImageView
            android:id="@+id/IMG_color"
            android:layout_width="10dip"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/grade_count_expand_group_item_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1.7"
            android:text="期末考试"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/grade_count_time"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="2017-2015"
            android:textColor="@color/gray" />

        <ImageView
            android:id="@+id/grade_count_expand_group_item_image"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginRight="15dip"
            android:src="@drawable/wx_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray_D2D2D2_color" />

</LinearLayout>