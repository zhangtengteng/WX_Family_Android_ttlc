<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wx_transparent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/wx_corner_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/photo_choose_camera"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#027aff"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />

        <TextView
            android:id="@+id/photo_choose_local"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="从相册选取"
            android:textColor="#027aff"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/photo_choose_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_margin="10dip"
        android:background="@drawable/wx_corner_dialog_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="#027aff"
        android:textSize="14sp" />

</LinearLayout>