<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_gray_bg"
    android:orientation="vertical" >

    <include layout="@layout/wx_common_title" />

    <com.xweisoft.wx.family.ui.message.view.ChatListView
        android:id="@+id/message_chat_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/transparent_color"
        android:cacheColorHint="@color/transparent_color"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="@drawable/wx_transparent"
        android:scrollbars="none"
        android:transcriptMode="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="@drawable/common_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/message_chat_picture"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:src="@drawable/wx_chat_picture_icon" />
        </LinearLayout>

        <EditText
            android:id="@+id/message_chat_edit"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:background="@drawable/wx_message_input_bg"
            android:orientation="horizontal"
            android:padding="5dip"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/message_chat_send"
            android:layout_width="60dip"
            android:layout_height="35dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/wx_message_send"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/white_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>