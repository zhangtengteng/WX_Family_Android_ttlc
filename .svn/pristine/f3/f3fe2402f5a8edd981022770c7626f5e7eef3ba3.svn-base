<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/title_layout"
        layout="@layout/wx_common_title" />

    <LinearLayout
        android:id="@+id/term"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        android:background="#66c964"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#e5e9eb"
            android:gravity="center"
            android:padding="5dp"
            android:text="上学期"
            android:textColor="#9e9f9c" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:text="第一次月考" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="期中考试"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="期末考试"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#e5e9eb"
            android:gravity="center"
            android:padding="5dp"
            android:text="下学期"
            android:textColor="#9e9f9c" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="第一次月考"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="期中考试"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="期末考试"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/report_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        android:layout_toRightOf="@id/term"
        android:orientation="vertical"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/left"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/left" />

                <ImageView
                    android:id="@+id/right"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/right" />
            </RelativeLayout>



            <LinearLayout

                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chinese"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="语文"
                    android:gravity="center"
                    android:textColor="#858585" />

                <TextView
                    android:id="@+id/math"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="数学"
                    android:textColor="#858585" />

                <TextView
                    android:id="@+id/english"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="英语"
                    android:gravity="center"
                    android:textColor="#858585" />

                <TextView
                    android:id="@+id/art"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="美术"
                    android:gravity="center"
                    android:textColor="#858585" />

                <TextView
                    android:id="@+id/music"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="音乐"
                    android:gravity="center"
                    android:textColor="#858585" />


            </LinearLayout>
            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#e5e9eb"

             />

        <GridView
            android:id="@+id/last_term_report"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@android:color/white"
            android:numColumns="5"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#e5e9eb"

            />
        <GridView
            android:id="@+id/next_term_report"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@android:color/white"
            android:numColumns="5"
            />

    </LinearLayout>

 <View
    android:id="@+id/shadow"
    android:layout_below="@+id/title_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#66f5e79c"/>
</RelativeLayout>
