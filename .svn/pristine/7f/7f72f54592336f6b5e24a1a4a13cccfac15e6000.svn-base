<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/contact_pager_view_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_gray_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:src="@drawable/img_prediction_noadd_icon" />

        <TextView
            android:id="@+id/contact_pager_view_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="暂无通讯录"
            android:textColor="@color/gray_686868_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/contact_pager_view_empty_text_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="加入到个人通讯录，可长久保存"
            android:textColor="@color/gray_686868_color"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <com.xweisoft.wx.family.widget.swipe.SwipeRefreshListView
        android:id="@+id/contact_pager_view_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_color"
        android:cacheColorHint="@color/transparent_color"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="@drawable/wx_transparent"
        android:scrollbars="none" />

</LinearLayout>