<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wx_transparent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/wx_corner_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gender_man"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/common_title_454545_color"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />

        <TextView
            android:id="@+id/gender_woman"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="女"
            android:textColor="@color/common_title_454545_color"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/gender_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_margin="10dip"
        android:background="@drawable/wx_corner_dialog_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/text_green_color"
        android:textSize="14sp" />

</LinearLayout>