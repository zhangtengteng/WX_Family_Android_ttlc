<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_gray_bg"
    android:orientation="vertical" >

    <include layout="@layout/wx_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:background="@drawable/ysh_item_bg_xml"
                
                android:layout_height="160dp" >

                <LinearLayout
                    android:id="@+id/myswitch_icon"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/ysh_kind_behind_bg_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>

                <ImageView
                    android:id="@+id/userheader_imageview"
                    android:layout_width="85dip"
                    android:layout_height="85dip"
                    android:layout_marginTop="57dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/defauilticon" />

                <TextView
                    android:id="@+id/userheader_imagevi"
                    android:layout_width="100dip"
                    android:layout_height="22dip"
                    android:textSize="18sp"
                    android:textColor="@color/gray_686868_color"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="110dp"
                    android:text="安妮(妈妈)" />
            </FrameLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray_D2D2D2_color" />

            <LinearLayout
                android:id="@+id/myswitch_views"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/ysh_item_bg_xml"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="0.5"
                    android:text="@string/ysh_telphone"
                    android:textColor="@color/common_title_454545_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="0.9"
                    android:text="123456789" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray_D2D2D2_color" />

            <LinearLayout
                android:id="@+id/myswitch_class"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/ysh_item_bg_xml"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="0.5"
                    android:text="@string/ysh_teclass"
                    android:textColor="@color/common_title_454545_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="0.9"
                    android:text="一年级三班" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray_D2D2D2_color" />

            <LinearLayout
                android:id="@+id/myswitch_sex"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/ysh_item_bg_xml"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="0.5"
                    android:text="@string/ysh_telsex"
                    android:textColor="@color/common_title_454545_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="0.9"
                    android:text="123456789" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray_D2D2D2_color" />

            <LinearLayout
                android:id="@+id/myswitch_jiaoshe"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/ysh_item_bg_xml"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dip"
                    
                    android:layout_weight="0.5"
                    android:text="@string/ysh_tejiaoshe"
                    android:textColor="@color/common_title_454545_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_jiaoshe"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dip"
                    android:layout_weight="0.8"
                    android:text="妈妈" />
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/wx_arrow_right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>