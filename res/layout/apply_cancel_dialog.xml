<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wx_transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/wx_corner_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/apply_cancel_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="填写预报名信息"
            android:textColor="@color/wx_green_35c384"
            android:textSize="14sp" />

        <View
            android:id="@+id/apply_cancel_dialog_divider_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />

        <TextView
            android:id="@+id/apply_cancel_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="60dip"
            android:padding="10dip"
            android:text="退出此次填写？"
            android:textColor="@color/common_title_454545_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/apply_cancel_dialog_cancel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/common_title_454545_color" />

            <View
                android:layout_width="0.1dip"
                android:layout_height="match_parent"
                android:background="@drawable/common_divider_line" />

            <TextView
                android:id="@+id/apply_cancel_dialog_confirm"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/wx_green_35c384" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>