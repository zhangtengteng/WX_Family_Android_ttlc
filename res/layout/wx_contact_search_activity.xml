<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_gray_bg"
    android:orientation="vertical" >

    <include layout="@layout/wx_common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@drawable/common_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <EditText
            android:id="@+id/contact_search_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wx_contact_search_edit_bg"
            android:drawablePadding="5dip"
            android:drawableRight="@drawable/wx_contact_search_icon"
            android:hint="请输入学生的或者老师的姓名"
            android:padding="5dip"
            android:singleLine="true"
            android:textColor="@color/wx_black_858585"
            android:textColorHint="@color/wx_gray_979797"
            android:textSize="15sp" />
    </LinearLayout>

    <com.xweisoft.wx.family.widget.swipe.SwipeRefreshListView
        android:id="@+id/contact_search_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_color"
        android:cacheColorHint="@color/transparent_color"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="@drawable/wx_transparent"
        android:scrollbars="none" >
    </com.xweisoft.wx.family.widget.swipe.SwipeRefreshListView>

</LinearLayout>