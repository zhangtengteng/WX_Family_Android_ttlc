<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_gray_bg"
    android:orientation="vertical" >

    <include layout="@layout/wx_common_title" />

    <com.xweisoft.wx.family.widget.swipe.SwipeRefreshListView
        android:id="@+id/newmessage_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_color"
        android:cacheColorHint="@color/transparent_color"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="@drawable/wx_transparent"
        android:scrollbars="none" />

</LinearLayout>