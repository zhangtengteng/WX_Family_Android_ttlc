<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_gray_bg"
    android:orientation="vertical" >

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/feedback_view"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="1dip"
        android:background="@drawable/ysh_item_bg_xml"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_feedback_ico"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/img_personal_feedback" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="0dip"
            android:layout_height="30dp"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/ysh_my_opinion"
            android:textColor="@color/common_title_454545_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/wx_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clear_view"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="1dip"
        android:background="@drawable/ysh_item_bg_xml"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_clear_ico"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/img_personal_clear" />

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="0dip"
            android:layout_height="30dp"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/ysh_my_clear"
            android:textColor="@color/common_title_454545_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/wx_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboutus_view"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/ysh_item_bg_xml"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_aboutus_ico"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/img_personal_aboutus" />

        <TextView
            android:id="@+id/tv_aboutus"
            android:layout_width="0dip"
            android:layout_height="30dp"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/ysh_my_about_us"
            android:textColor="@color/common_title_454545_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/wx_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upgrate_view"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="1dip"
        android:background="@drawable/ysh_item_bg_xml"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_upgrate_ico"
            android:layout_width="40dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/img_personal_upgrate" />

        <TextView
            android:id="@+id/tv_upgrate"
            android:layout_width="0dip"
            android:layout_height="30dp"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/ysh_my_upgrate"
            android:textColor="@color/common_title_454545_color"
            android:textSize="16sp" />
        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="right"
            android:minWidth="110dip"
            android:singleLine="true"
            android:text="@string/ysh_current_version"
            android:textColor="@color/common_content_a7a7a7_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>