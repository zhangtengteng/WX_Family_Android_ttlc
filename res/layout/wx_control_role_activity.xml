<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_white_bg"
    android:orientation="vertical" >

    <include layout="@layout/wx_common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="left"
            android:text="@string/ysh_control_role"
            android:textColor="@color/common_title_454545_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/ysh_vertical_line" />

        <EditText
            android:id="@+id/role_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@drawable/common_divider_line" />

    <Button
        android:id="@+id/role_submit_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:background="#8C509A"
        android:text="@string/ysh_finish"
        android:textColor="@color/white_color"
        android:textSize="18sp" />

</LinearLayout>