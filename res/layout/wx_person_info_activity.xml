<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_white_bg"
    android:orientation="vertical" >

    <include layout="@layout/wx_common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:scaleType="centerCrop"
            android:src="@drawable/wx_person_top_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="-40dip"
            android:minHeight="80dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:background="@drawable/defauilticon"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/person_info_header"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:background="@drawable/wx_default_header" />
            </LinearLayout>

            <TextView
                android:id="@+id/person_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="50dip"
                android:textColor="@color/wx_black_3c3c3c"
                android:textSize="17sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/common_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="手机号码"
                android:textColor="@color/wx_black_3c3c3c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/person_info_phone"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/wx_black_858585"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="45dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="班级"
                android:textColor="@color/wx_black_3c3c3c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/person_info_class"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:textColor="@color/wx_black_858585"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="性别"
                android:textColor="@color/wx_black_3c3c3c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/person_info_sex"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/wx_black_858585"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />

        <LinearLayout
            android:id="@+id/person_info_appellation_view"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="监护角色"
                android:textColor="@color/wx_black_3c3c3c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/person_info_appellation"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/wx_black_858585"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/wx_arrow_right"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />
    </LinearLayout>

</LinearLayout>