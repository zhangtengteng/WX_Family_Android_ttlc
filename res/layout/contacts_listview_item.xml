<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/contact_item_role_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_white_bg"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="@drawable/common_gray_bg" />

        <TextView
            android:id="@+id/contact_item_role_text"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="老师"
            android:textColor="@color/wx_green_35c384"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <ImageView
            android:id="@+id/contact_item_header"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/wx_default_header" />

        <LinearLayout
            android:id="@+id/ll_mail_content"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contact_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/mail_name"
                android:textColor="@color/wx_black_3c3c3c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contact_item_appellation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="@string/mail_content"
                android:textColor="@color/wx_black_858585"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/contact_item_arrow"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/wx_arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@drawable/common_divider_line" />

</LinearLayout>