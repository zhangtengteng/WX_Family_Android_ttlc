            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/common_white_bg"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="65dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="left"
                    android:text="@string/ysh_oldpwd"
                    android:textColor="@color/common_title_454545_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/ysh_vertical_line" />
                
                <!-- 旧，密码 -->

                <EditText
                    android:id="@+id/modify_password_oldpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@android:color/transparent"
                    android:hint="@string/ysh_oldpowd_hint2"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/common_white_bg"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="65dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="left"
                    android:text="@string/ysh_new_password"
                    android:textColor="@color/common_title_454545_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/ysh_vertical_line" />

                <EditText
                    android:id="@+id/new_password_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@android:color/transparent"
                    android:hint="@string/ysh_register_password_hint"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/common_white_bg"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="65dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="left"
                    android:text="确认密码"
                    android:textColor="@color/common_title_454545_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/ysh_vertical_line" />

                <EditText
                    android:id="@+id/new_next_password_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@android:color/transparent"
                    android:hint="@string/ysh_register_password_hint"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/modify_password_submit_button"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="100dip"
                android:background="@color/green_2EAF76_color"
                android:text="@string/finish"
                android:textColor="@color/white_color"
                android:textSize="18sp" />
        </LinearLayout>
