<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wx_transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/wx_corner_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/grade_picker_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:text="学年选择"
            android:textColor="@color/green_34C385_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />

        <ImageView
            android:id="@+id/grade_picker_dialog_arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dip"
            android:background="@drawable/arreup" />

        <com.xweisoft.wx.family.widget.WheelView
            android:id="@+id/grade_picker_dialog_wheelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/grade_picker_dialog_arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dip"
            android:background="@drawable/arredown" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/common_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/grade_picker_dialog_cancel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/green_34C385_color" />

            <View
                android:layout_width="0.1dip"
                android:layout_height="match_parent"
                android:background="@drawable/common_divider_line" />

            <TextView
                android:id="@+id/grade_picker_dialog_confirm"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/green_34C385_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>